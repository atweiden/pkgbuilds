# Maintainer: Andy Weidenbaum <atweiden@tutanota.de>

pkgname='rakudo'
pkgver=2022.02
pkgrel=1
pkgdesc='Mature, production-ready implementation of the Raku language'
arch=('aarch64'
      'armv6h'
      'armv7h'
      'i686'
      'x86_64')
depends=('libatomic_ops'
         'libffi'
         'libtommath'
         'libuv'
         'moarvm'
         'nqp'
         'zstd')
makedepends=('git'
             'make'
             'perl')
optdepends=('gdb: GDB runner'
            'valgrind: Valgrind runner')
groups=('raku')
url='https://github.com/rakudo/rakudo'
license=('PerlArtistic')
source=("https://rakudo.org/dl/rakudo/$pkgname-$pkgver.tar.gz"{,.asc})
sha256sums=('6a6e9dbcc6d9a1610a34c6ec67e2d3f694d7b33e9e0a0f224543089fa7f71332'
            'SKIP')
validpgpkeys=('59E634736AFDCF9C6DBAC382602D51EACA887C01')
provides=('raku')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Building...'
  perl Configure.pl \
    --prefix='/usr' \
    --backends='moar'
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Installing...'
  export RAKUDO_LOG_PRECOMP=1
  export RAKUDO_RERESOLVE_DEPENDENCIES=0
  make \
    DESTDIR="$pkgdir" \
    install
  install -Dm 755 tools/install-dist.p6 \
    "$pkgdir/usr/bin/raku-install-dist"
}
