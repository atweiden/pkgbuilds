# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname='moarvm'
pkgver=2020.01.1
pkgrel=1
pkgdesc='VM with adaptive optimization and JIT compilation, built for Rakudo'
arch=('aarch64'
      'armv6h'
      'armv7h'
      'i686'
      'x86_64')
depends=('libatomic_ops'
         'libffi'
         'libuv'
         'zstd')
makedepends=('binutils'
             'git'
             'make'
             'perl'
             'pkgconf')
groups=('raku')
url='https://moarvm.org'
license=('PerlArtistic')
options=('!purge')
source=("https://moarvm.org/releases/MoarVM-$version.tar.gz"{,.asc})
sha256sums=('dcb61e44a098e8375c385eb9d52bd6394255a388697b2f6a52d88e6cf4a53587'
            'SKIP')
validpgpkeys=('E2AEB3D93FB3940B844C9E08A68DF012C3881D62')

build() {
  cd "$srcdir/MoarVM-$pkgver"

  msg2 'Building...'
  perl Configure.pl \
    --has-libatomic_ops \
    --has-libffi \
    --has-libuv \
    --optimize \
    --pkgconfig='/usr/bin/pkgconf' \
    --prefix='/usr' \
    --toolchain='gnu'
  make
}

package() {
  cd "$srcdir/MoarVM-$pkgver"

  msg2 'Installing documentation...'
  install -Dm 644 README.markdown \
          -t "$pkgdir/usr/share/doc/$pkgname"
  cp -dpr --no-preserve='ownership' docs "$pkgdir/usr/share/doc/$pkgname/design"

  msg2 'Installing license...'
  install -Dm 644 Artistic2.txt \
                  CREDITS \
                  LICENSE \
          -t "$pkgdir/usr/share/licenses/$pkgname"

  msg2 'Installing...'
  make \
    DESTDIR="$pkgdir" \
    install
}
