# Maintainer: Andy Weidenbaum <archbaum@gmail.com>
# JVM build disabled 2016-02-02 "Missing serialize function for REPR ContextRef"

pkgname=nqp
pkgver=2016.01
pkgrel=1
pkgdesc="Lightweight Perl6-like environment for virtual machines, with MoarVM support"
arch=('i686' 'x86_64')
depends=('moarvm')
makedepends=('make')
groups=('perl6')
url="https://github.com/perl6/nqp"
license=('PerlArtistic')
source=($pkgname-$pkgver.tar.gz::https://codeload.github.com/perl6/$pkgname/tar.gz/$pkgver)
sha256sums=('451e9d2f24029dfd261183a59d2b36a383c9c50e65bc038193d85cad1ab1fd54')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Building...'
  perl Configure.pl --prefix=/usr --backends=moar
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Installing...'
  make DESTDIR="$pkgdir" install
}
